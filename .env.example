# Fast6 Environment Configuration
# Copy to .env and customize for your environment.

# =============================================================================
# Backend (FastAPI)
# =============================================================================

# Environment: development | staging | production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=false

# Database path (relative to project root or absolute)
DATABASE_PATH=data/fast6.db

# JWT Security â€” REQUIRED in production
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8000

# NFL Configuration
CURRENT_SEASON=2025
CURRENT_WEEK=1

# =============================================================================
# Frontend (Next.js)
# =============================================================================

# Backend API URL (used when frontend fetches from server)
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000

# Public app URL (for auth redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Season displayed in UI
NEXT_PUBLIC_CURRENT_SEASON=2025

# Fallback username for server-side auth when no session (dev only)
NEXT_PUBLIC_TEST_USERNAME=Phil
